{
  "name": "my-apollo-server",
  "version": "1.0.0",
  "engines": {
    "node": "v10.15.0",
    "npm": "6.4.1"
  },
  "scripts": {
    "client": "cd graphql-lesson && yarn start",
    "server": "nodemon server.js",
    "build": "cd graphql-lesson && npm run build",
    "dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
    "start": "node server.js",
    "heroku-postbuild": "cd graphql-lesson && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
  },
  "dependencies": {
    "body-parser": "^1.18.3",
    "compression": "1.7.4",
    "cors": "2.8.5",
    "dotenv": "7.0.0",
    "express": "^4.16.4",
    "stripe": "6.28.0"
  },
  "devDependencies": {
    "concurrently": "^4.0.1"
  }
}
